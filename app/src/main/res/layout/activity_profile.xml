<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context="com.attend.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:textColor="#ffffff" />

        <GridLayout
            android:id="@+id/outer_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2">

            <GridLayout
                android:id="@+id/inner_top_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_column="0"
                android:layout_row="0"
                android:background="#5E35B1"
                android:columnCount="1"
                android:rowCount="4">

                <ImageView
                    android:id="@+id/icon_image"
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:src="@drawable/alarm_icon" />

                <TextView
                    android:id="@+id/name"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_row="3"
                    android:fontFamily="casual"
                    android:text="HIMANSHU"
                    android:textColor="#ffffff"
                    android:textSize="10pt" />

            </GridLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <GridLayout
                    android:id="@+id/inner_bottom_grid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:columnCount="1"
                    android:rowCount="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_row="0"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/phone_number_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/call" />

                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="9728429445"
                            android:textSize="10pt" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_row="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/email_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/mail" />

                        <TextView
                            android:id="@+id/email_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="jindalhimanshu321@gmail.com"
                            android:textSize="10pt" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_row="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/roll_number_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/rollnumber" />

                        <TextView
                            android:id="@+id/roll_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="1140865"
                            android:textSize="10pt" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_row="3"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/degree_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/degree" />

                        <TextView
                            android:id="@+id/branch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Information Technology"
                            android:textSize="10pt" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_row="4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/institute_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/college" />

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/institute_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="National Institute of Technology, Kurukshetra"
                                android:textSize="10pt" />
                        </ScrollView>
                    </LinearLayout>

                </GridLayout>
            </ScrollView>
        </GridLayout>
    </RelativeLayout>
</LinearLayout>
